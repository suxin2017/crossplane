{
    "compilerOptions": {
        "module": "es2015",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "target": "ES2015",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
}